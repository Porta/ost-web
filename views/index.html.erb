<div class="container">
  <header class="page-header">
    <h1>Ost queues</h1>
  </header>

  <div class="row">
    <div class="col-md-6">
      <h3>Pending</h3>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Queue</th>
            <th>Jobs</th>
          </tr>
        </thead>
        <tbody>
          <% queues.each do |queue| %>
            <tr>
              <td>
                <a href="/queues/<%= queue.name %>"><%= queue.name %></a>
              </td>
              <td><%= queue.size %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col-md-6">
      <h3>Working</h3>

      <table class="table table-hover">
        <thead>
          <tr>
            <th>Queue</th>
            <th>Host</th>
            <th>PID</th>
          </tr>
        </thead>
        <tbody>
          <% backups.each do |queue| %>
            <tr>
              <td><%= queue.name %></td>
              <td><%= queue.hostname %></td>
              <td><%= queue.pid %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
