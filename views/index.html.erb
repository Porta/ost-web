<div class="container">
  <header class="page-header">
    <h1>Ost queues</h1>
  </header>

  <div class="row">
    <div class="col-md-6">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Queue</th>
            <th class="table--number">Jobs</th>
          </tr>
        </thead>
        <tbody>
          <% queues.each do |queue_name| %>
            <tr>
              <td>
                <a href="/queues/<%= queue_name %>"><%= queue_name %></a>
              </td>
              <td class="table--number"><%= Ost[queue_name].size %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
